<experiment id="orgID_projectID_expID">
    <measurement-points>
        <measurement-point index="2" type="time_based">
	    <properties>
	        <property name="trigger">
		    <value type="sec">5</value>
		</property>
	    </properties>
            <metric name="rssi" type="float">
                <filter name="sample_mean"/>
            </metric>
            <metric name="noise" type="float">
                <filter refid="sample_mean"/>
            </metric>
            <metric name="packet_size" type="int"/>
        </measurement-point>
        <measurement-point index="3" type="sample_based">
	    <properties>
	        <property name="trigger">
		    <value>100</value>
		</property>
	    </properties>
            <metric name="throughput" type="float">
                <filter name="sample_mean"/>
            </metric>
            <metric name="packet_size" type="int"/>
            <metric name="channel" type="int"/>
        </measurement-point>
    </measurement-points>
</experiment>