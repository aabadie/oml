#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

VER=2.3

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	autoreconf --install
	./configure --prefix /usr
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)
	#docbook-to-man debian/oml.sgml > oml.1

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/oml.
	$(MAKE) DESTDIR=$(CURDIR)/debian/oml-client-$(VER) install
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/gps_oml2 $(CURDIR)/debian/oml-client-$(VER)/usr/bin/gps_oml-$(VER)
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/iperf_oml2 $(CURDIR)/debian/oml-client-$(VER)/usr/bin/iperf_oml-$(VER)
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/nmetrics_oml2 $(CURDIR)/debian/oml-client-$(VER)/usr/bin/nmetrics_oml-$(VER)
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/oml2_scaffold $(CURDIR)/debian/oml-client-$(VER)/usr/bin/oml$(VER)_scaffold
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/trace_oml2 $(CURDIR)/debian/oml-client-$(VER)/usr/bin/trace_oml-$(VER)
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/wlanconfig_oml2 $(CURDIR)/debian/oml-client-$(VER)/usr/bin/wlanconfig_oml-$(VER)
	mkdir -p $(CURDIR)/debian/oml-server-$(VER)/usr/bin
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/oml2-server $(CURDIR)/debian/oml-server-$(VER)/usr/bin/oml-server-$(VER)
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/oml2-proxy-server $(CURDIR)/debian/oml-server-$(VER)/usr/bin/oml-proxy-server-$(VER)
	mkdir -p $(CURDIR)/debian/liboml-dev-$(VER)/usr/include
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/include/ocomm $(CURDIR)/debian/liboml-dev-$(VER)/usr/include/ocomm-$(VER)
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/include/oml2 $(CURDIR)/debian/liboml-dev-$(VER)/usr/include/oml-$(VER)
	for FILE in `ls $(CURDIR)/debian/oml-client-$(VER)/usr/lib/*`; do mv $$FILE `echo $$FILE | sed 's/lib/lib-$(VER)/g'`; done
	mkdir -p $(CURDIR)/debian/liboml-$(VER)/usr/lib
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/lib/* $(CURDIR)/debian/liboml-$(VER)/usr/lib
	mkdir -p $(CURDIR)/debian/otg-$(VER)/usr/bin
	mkdir -p $(CURDIR)/debian/otg-$(VER)/usr/lib
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/otg2 $(CURDIR)/debian/otg-$(VER)/usr/bin/otg-2.3
	mv $(CURDIR)/debian/oml-client-$(VER)/usr/bin/otr2 $(CURDIR)/debian/otg-$(VER)/usr/bin/otr-2.3
	for FILE in `ls $(CURDIR)/debian/liboml-$(VER)/usr/lib/libotg2*`; do mv $$FILE `echo $$FILE | sed 's/libotg2/libotg-$(VER)/g'`; done
	mv $(CURDIR)/debian/liboml-$(VER)/usr/lib/libotg* $(CURDIR)/debian/otg-$(VER)/usr/lib
	rm -rf $(CURDIR)/debian/oml-client-$(VER)/usr/include
	rm -rf $(CURDIR)/debian/oml-client-$(VER)/usr/lib

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
#	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
