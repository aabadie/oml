#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1




configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	autoreconf --install
	./configure --prefix /usr
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)
	#docbook-to-man debian/oml.sgml > oml.1

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/oml.
	$(MAKE) DESTDIR=$(CURDIR)/debian/oml-client install
	mkdir -p $(CURDIR)/debian/oml-server/usr/bin
	mv $(CURDIR)/debian/oml-client/usr/bin/oml2-server $(CURDIR)/debian/oml-server/usr/bin/
	mv $(CURDIR)/debian/oml-client/usr/bin/oml2-proxy-server $(CURDIR)/debian/oml-server/usr/bin/
	mkdir -p $(CURDIR)/debian/liboml-dev/usr/include
	mv $(CURDIR)/debian/oml-client/usr/include/* $(CURDIR)/debian/liboml-dev/usr/include/
	mkdir -p $(CURDIR)/debian/liboml/usr/lib
	mv $(CURDIR)/debian/oml-client/usr/lib/* $(CURDIR)/debian/liboml/usr/lib/
	mkdir -p $(CURDIR)/debian/otg/usr/bin
	mkdir -p $(CURDIR)/debian/otg/usr/lib
	mv $(CURDIR)/debian/oml-client/usr/bin/otg2 $(CURDIR)/debian/otg/usr/bin/
	mv $(CURDIR)/debian/oml-client/usr/bin/otr2 $(CURDIR)/debian/otg/usr/bin/
	mv $(CURDIR)/debian/liboml/usr/lib/libotg* $(CURDIR)/debian/otg/usr/lib/

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
#	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
